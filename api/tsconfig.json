{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
